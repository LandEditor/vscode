{
	"activationEvents": [
		"onTaskType:npm",
		"onLanguage:json",
		"workspaceContains:package.json"
	],
	"browser": "./dist/browser/npmBrowserMain",
	"capabilities": {
		"untrustedWorkspaces": {
			"description": "%workspaceTrust%",
			"supported": "limited"
		},
		"virtualWorkspaces": {
			"description": "%virtualWorkspaces%",
			"supported": "limited"
		}
	},
	"contributes": {
		"commands": [
			{
				"command": "npm.runScript",
				"icon": "$(run)",
				"title": "%command.run%"
			},
			{
				"command": "npm.debugScript",
				"icon": "$(debug)",
				"title": "%command.debug%"
			},
			{
				"command": "npm.openScript",
				"title": "%command.openScript%"
			},
			{
				"command": "npm.runInstall",
				"title": "%command.runInstall%"
			},
			{
				"command": "npm.refresh",
				"icon": "$(refresh)",
				"title": "%command.refresh%"
			},
			{
				"command": "npm.runSelectedScript",
				"title": "%command.runSelectedScript%"
			},
			{
				"command": "npm.runScriptFromFolder",
				"title": "%command.runScriptFromFolder%"
			},
			{
				"command": "npm.packageManager",
				"title": "%command.packageManager%"
			}
		],
		"configuration": {
			"id": "npm",
			"properties": {
				"npm.autoDetect": {
					"default": "on",
					"description": "%config.npm.autoDetect%",
					"enum": [
						"off",
						"on"
					],
					"scope": "resource",
					"type": "string"
				},
				"npm.enableRunFromFolder": {
					"default": false,
					"description": "%config.npm.enableRunFromFolder%",
					"scope": "resource",
					"type": "boolean"
				},
				"npm.enableScriptExplorer": {
					"default": false,
					"deprecationMessage": "The NPM Script Explorer is now available in 'Views' menu in the Explorer in all folders.",
					"description": "%config.npm.enableScriptExplorer%",
					"scope": "resource",
					"type": "boolean"
				},
				"npm.exclude": {
					"description": "%config.npm.exclude%",
					"items": {
						"type": "string"
					},
					"scope": "resource",
					"type": [
						"string",
						"array"
					]
				},
				"npm.fetchOnlinePackageInfo": {
					"default": true,
					"description": "%config.npm.fetchOnlinePackageInfo%",
					"scope": "window",
					"tags": [
						"usesOnlineServices"
					],
					"type": "boolean"
				},
				"npm.packageManager": {
					"default": "auto",
					"description": "%config.npm.packageManager%",
					"enum": [
						"auto",
						"npm",
						"yarn",
						"pnpm",
						"bun"
					],
					"enumDescriptions": [
						"%config.npm.packageManager.auto%",
						"%config.npm.packageManager.npm%",
						"%config.npm.packageManager.yarn%",
						"%config.npm.packageManager.pnpm%",
						"%config.npm.packageManager.bun%"
					],
					"scope": "resource",
					"type": "string"
				},
				"npm.runSilent": {
					"default": false,
					"markdownDescription": "%config.npm.runSilent%",
					"scope": "resource",
					"type": "boolean"
				},
				"npm.scriptExplorerAction": {
					"default": "open",
					"enum": [
						"open",
						"run"
					],
					"markdownDescription": "%config.npm.scriptExplorerAction%",
					"scope": "window",
					"type": "string"
				},
				"npm.scriptExplorerExclude": {
					"default": [],
					"items": {
						"type": "string"
					},
					"markdownDescription": "%config.npm.scriptExplorerExclude%",
					"scope": "resource",
					"type": "array"
				},
				"npm.scriptHover": {
					"default": true,
					"description": "%config.npm.scriptHover%",
					"scope": "window",
					"type": "boolean"
				}
			},
			"title": "Npm",
			"type": "object"
		},
		"jsonValidation": [
			{
				"fileMatch": "package.json",
				"url": "https://json.schemastore.org/package"
			},
			{
				"fileMatch": "bower.json",
				"url": "https://json.schemastore.org/bower"
			}
		],
		"languages": [
			{
				"extensions": [
					".npmignore"
				],
				"id": "ignore"
			},
			{
				"extensions": [
					".npmrc"
				],
				"id": "properties"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "npm.refresh",
					"when": "false"
				},
				{
					"command": "npm.runScript",
					"when": "false"
				},
				{
					"command": "npm.debugScript",
					"when": "false"
				},
				{
					"command": "npm.openScript",
					"when": "false"
				},
				{
					"command": "npm.runInstall",
					"when": "false"
				},
				{
					"command": "npm.runSelectedScript",
					"when": "false"
				},
				{
					"command": "npm.runScriptFromFolder",
					"when": "false"
				},
				{
					"command": "npm.packageManager",
					"when": "false"
				}
			],
			"editor/context": [
				{
					"command": "npm.runSelectedScript",
					"group": "navigation@+1",
					"when": "resourceFilename == 'package.json' && resourceScheme == file"
				}
			],
			"explorer/context": [
				{
					"command": "npm.runScriptFromFolder",
					"group": "2_workspace",
					"when": "config.npm.enableRunFromFolder && explorerViewletVisible && explorerResourceIsFolder && resourceScheme == file"
				}
			],
			"view/item/context": [
				{
					"command": "npm.openScript",
					"group": "navigation@1",
					"when": "view == npm && viewItem == packageJSON"
				},
				{
					"command": "npm.runInstall",
					"group": "navigation@2",
					"when": "view == npm && viewItem == packageJSON"
				},
				{
					"command": "npm.openScript",
					"group": "navigation@1",
					"when": "view == npm && viewItem == script"
				},
				{
					"command": "npm.runScript",
					"group": "navigation@2",
					"when": "view == npm && viewItem == script"
				},
				{
					"command": "npm.runScript",
					"group": "inline",
					"when": "view == npm && viewItem == script"
				},
				{
					"command": "npm.debugScript",
					"group": "inline",
					"when": "view == npm && viewItem == script"
				},
				{
					"command": "npm.debugScript",
					"group": "navigation@3",
					"when": "view == npm && viewItem == script"
				}
			],
			"view/title": [
				{
					"command": "npm.refresh",
					"group": "navigation",
					"when": "view == npm"
				}
			]
		},
		"taskDefinitions": [
			{
				"properties": {
					"path": {
						"description": "%taskdef.path%",
						"type": "string"
					},
					"script": {
						"description": "%taskdef.script%",
						"type": "string"
					}
				},
				"required": [
					"script"
				],
				"type": "npm",
				"when": "shellExecutionSupported"
			}
		],
		"terminalQuickFixes": [
			{
				"commandExitResult": "error",
				"commandLineMatcher": "npm",
				"id": "ms-vscode.npm-command",
				"outputMatcher": {
					"anchor": "bottom",
					"length": 8,
					"lineMatcher": "Did you mean (?:this|one of these)\\?((?:\\n.+?npm .+ #.+)+)",
					"offset": 2
				}
			}
		],
		"views": {
			"explorer": [
				{
					"contextualTitle": "%view.name%",
					"icon": "$(json)",
					"id": "npm",
					"name": "%view.name%",
					"visibility": "hidden",
					"when": "npm:showScriptExplorer"
				}
			]
		}
	},
	"dependencies": {
		"find-up": "7.0.0",
		"find-yarn-workspace-root": "2.0.0",
		"jsonc-parser": "3.3.1",
		"minimatch": "10.0.1",
		"request-light": "0.8.0",
		"which": "5.0.0",
		"which-pm": "3.0.0"
	},
	"description": "%description%",
	"devDependencies": {
		"@types/minimatch": "5.1.2",
		"@types/node": "22.x",
		"@types/which": "3.0.4"
	},
	"displayName": "%displayName%",
	"enabledApiProposals": [
		"terminalQuickFixProvider"
	],
	"icon": "images/npm_icon.png",
	"main": "./out/npmMain",
	"name": "npm",
	"scripts": {
		"compile": "npx gulp compile-extension:npm"
	}
}
