{
	"name": "yaml",
	"displayName": "%displayName%",
	"description": "%description%",
	"scripts": {
		"update-grammar": "node ./build/update-grammar.js"
	},
	"contributes": {
		"configurationDefaults": {
			"[dockercompose]": {
				"editor.autoIndent": "advanced",
				"editor.insertSpaces": true,
				"editor.tabSize": 2
			},
			"[yaml]": {
				"diffEditor.ignoreTrimWhitespace": false,
				"editor.autoIndent": "advanced",
				"editor.defaultColorDecorators": false,
				"editor.insertSpaces": true,
				"editor.tabSize": 2
			}
		},
		"grammars": [
			{
				"language": "dockercompose",
				"path": "./syntaxes/yaml.tmLanguage.json",
				"scopeName": "source.yaml"
			},
			{
				"path": "./syntaxes/yaml-1.3.tmLanguage.json",
				"scopeName": "source.yaml.1.3"
			},
			{
				"path": "./syntaxes/yaml-1.2.tmLanguage.json",
				"scopeName": "source.yaml.1.2"
			},
			{
				"path": "./syntaxes/yaml-1.1.tmLanguage.json",
				"scopeName": "source.yaml.1.1"
			},
			{
				"path": "./syntaxes/yaml-1.0.tmLanguage.json",
				"scopeName": "source.yaml.1.0"
			},
			{
				"path": "./syntaxes/yaml-embedded.tmLanguage.json",
				"scopeName": "source.yaml.embedded"
			},
			{
				"language": "yaml",
				"path": "./syntaxes/yaml.tmLanguage.json",
				"scopeName": "source.yaml",
				"unbalancedBracketScopes": [
					"invalid.illegal",
					"meta.scalar.yaml",
					"storage.type.tag.shorthand.yaml",
					"keyword.control.flow"
				]
			}
		],
		"languages": [
			{
				"aliases": [
					"Compose",
					"compose"
				],
				"configuration": "./language-configuration.json",
				"filenamePatterns": [
					"compose.yml",
					"compose.yaml",
					"compose.*.yml",
					"compose.*.yaml",
					"*docker*compose*.yml",
					"*docker*compose*.yaml"
				],
				"id": "dockercompose"
			},
			{
				"aliases": [
					"YAML",
					"yaml"
				],
				"configuration": "./language-configuration.json",
				"extensions": [
					".yaml",
					".yml",
					".eyaml",
					".eyml",
					".cff",
					".yaml-tmlanguage",
					".yaml-tmpreferences",
					".yaml-tmtheme",
					".winget"
				],
				"firstLine": "^#cloud-config",
				"id": "yaml"
			}
		]
	},
	"dependencies": {},
	"devDependencies": {}
}
