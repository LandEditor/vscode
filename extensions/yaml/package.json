{
	"contributes": {
		"configurationDefaults": {
			"[dockercompose]": {
				"editor.autoIndent": "advanced",
				"editor.insertSpaces": true,
				"editor.tabSize": 2
			},
			"[yaml]": {
				"diffEditor.ignoreTrimWhitespace": false,
				"editor.autoIndent": "advanced",
				"editor.insertSpaces": true,
				"editor.tabSize": 2
			}
		},
		"grammars": [
			{
				"language": "dockercompose",
				"path": "./syntaxes/yaml.tmLanguage.json",
				"scopeName": "source.yaml"
			},
			{
				"language": "yaml",
				"path": "./syntaxes/yaml.tmLanguage.json",
				"scopeName": "source.yaml"
			}
		],
		"languages": [
			{
				"aliases": [
					"Compose",
					"compose"
				],
				"configuration": "./language-configuration.json",
				"filenamePatterns": [
					"compose.yml",
					"compose.yaml",
					"compose.*.yml",
					"compose.*.yaml",
					"*docker*compose*.yml",
					"*docker*compose*.yaml"
				],
				"id": "dockercompose"
			},
			{
				"aliases": [
					"YAML",
					"yaml"
				],
				"configuration": "./language-configuration.json",
				"extensions": [
					".yaml",
					".yml",
					".eyaml",
					".eyml",
					".cff",
					".yaml-tmlanguage",
					".yaml-tmpreferences",
					".yaml-tmtheme"
				],
				"firstLine": "^#cloud-config",
				"id": "yaml"
			}
		]
	},
	"description": "%description%",
	"displayName": "%displayName%",
	"name": "yaml",
	"scripts": {
		"update-grammar": "node ./build/update-grammar.js"
	}
}
