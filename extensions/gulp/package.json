{
	"activationEvents": [
		"onTaskType:gulp"
	],
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": true
		},
		"virtualWorkspaces": false
	},
	"contributes": {
		"configuration": {
			"id": "gulp",
			"properties": {
				"gulp.autoDetect": {
					"default": "off",
					"description": "%config.gulp.autoDetect%",
					"enum": [
						"off",
						"on"
					],
					"scope": "application",
					"type": "string"
				}
			},
			"title": "Gulp",
			"type": "object"
		},
		"taskDefinitions": [
			{
				"properties": {
					"file": {
						"description": "%gulp.taskDefinition.file.description%",
						"type": "string"
					},
					"task": {
						"description": "%gulp.taskDefinition.type.description%",
						"type": "string"
					}
				},
				"required": [
					"task"
				],
				"type": "gulp",
				"when": "shellExecutionSupported"
			}
		]
	},
	"dependencies": {},
	"description": "%description%",
	"devDependencies": {
		"@types/node": "22.x"
	},
	"displayName": "%displayName%",
	"icon": "images/gulp.png",
	"main": "./out/main",
	"name": "gulp",
	"scripts": {
		"compile": "gulp compile-extension:gulp"
	}
}
