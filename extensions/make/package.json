{
	"name": "make",
	"displayName": "%displayName%",
	"version": "1.0.0",
	"description": "%description%",
	"repository": {
		"type": "git",
		"url": "https://github.com/microsoft/vscode.git"
	},
	"license": "MIT",
	"publisher": "vscode",
	"scripts": {
		"update-grammar": "node ../node_modules/vscode-grammar-updater/bin fadeevab/make.tmbundle Syntaxes/Makefile.plist ./syntaxes/make.tmLanguage.json"
	},
	"contributes": {
		"configurationDefaults": {
			"[makefile]": {
				"editor.insertSpaces": false
			}
		},
		"grammars": [
			{
				"language": "makefile",
				"scopeName": "source.makefile",
				"path": "./syntaxes/make.tmLanguage.json",
				"tokenTypes": {
					"string.interpolated": "other"
				}
			}
		],
		"languages": [
			{
				"id": "makefile",
				"aliases": [
					"Makefile",
					"makefile"
				],
				"extensions": [
					".mak",
					".mk"
				],
				"filenames": [
					"Makefile",
					"makefile",
					"GNUmakefile",
					"OCamlMakefile"
				],
				"firstLine": "^#!\\s*/usr/bin/make",
				"configuration": "./language-configuration.json"
			}
		]
	},
	"engines": {
		"vscode": "*"
	}
}
